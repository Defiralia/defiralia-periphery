{
  "name": "defiralia-contract",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "hardhat": "npx hardhat",
    "hardhat:polygonZkMainnet": "hardhat --network polygonZkMainnet",
    "hardhat:polygonZkTestnet": "hardhat --network polygonZkTestnet",
    "hardhat:goerli": "hardhat --network goerli",
    "hardhat:sepolia": "hardhat --network sepolia",
    "hardhat:arbitrumGoerli": "hardhat --network arbitrumGoerli",
    "compile": "SKIP_LOAD=true yarn hardhat compile",
    "test": "SKIP_LOAD=true yarn hardhat test",
    "test:report-gas": "REPORT_GAS=true yarn test",
    "coverage": "yarn hardhat coverage",
    "deploy-mock-tokens:testnet": "yarn hardhat:polygonZkTestnet dev:deploy-mock-tokens",
    "deploy-mock-tokens:sepolia": "yarn hardhat:sepolia dev:deploy-mock-tokens",
    "mint-mock-tokens:testnet": "yarn hardhat:polygonZkTestnet dev:mint-mock-tokens",
    "mint-mock-tokens:sepolia": "yarn hardhat:sepolia dev:mint-mock-tokens",
    "deploy-lending-and-register-assets:testnet": "yarn hardhat:polygonZkTestnet dev:deploy-lending && yarn hardhat:polygonZkTestnet dev:register-asset-config",
    "deploy-lending-and-register-assets:sepolia": "yarn hardhat:sepolia dev:deploy-lending && yarn hardhat:sepolia dev:register-asset-config",
    "prettier:check": "prettier -c 'contracts/**/*.sol' 'test/**/*.ts' 'scripts/**/*.ts'",
    "prettier:write": "prettier --write 'contracts/**/*.sol' 'test/**/*.ts' 'scripts/**/*.ts'",
    "clean": "SKIP_LOAD=true hardhat clean && rm -r node_modules cache",
    "size-contract": "yarn hardhat size-contracts",
    "export-abi": "yarn hardhat export-abi",
    "solhint": "yarn hardhat check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Defiralia-Finance/Defiralia-Contract.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Defiralia-Finance/Defiralia-Contract/issues"
  },
  "homepage": "https://github.com/Defiralia-Finance/Defiralia-Contract#readme",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^2.0.1",
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.6",
    "@nomiclabs/hardhat-solhint": "^3.0.1",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.4",
    "@types/jsonfile": "^6.1.1",
    "@types/mocha": "^10.0.1",
    "@uniswap/v3-sdk": "^3.9.0",
    "dotenv": "^16.0.3",
    "ethers": "^5.0.0",
    "hardhat": "^2.16.0",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^2.8.4",
    "prettier-plugin-solidity": "^1.1.3",
    "solidity-coverage": "^0.8.2",
    "solidity-docgen": "^0.6.0-beta.35",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.6.1",
    "@openzeppelin/contracts": "^4.8.1",
    "@openzeppelin/contracts-upgradeable": "^4.9.2",
    "bignumber.js": "^9.1.1"
  }
}
